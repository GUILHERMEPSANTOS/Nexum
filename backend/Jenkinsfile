#!/usr/bin/env groovy
properties([pipelineTriggers([githubPush()])])

pipeline {
    agent any
    stages {
        stage('Build') { 
            steps {
                dir('backend') {                 
                  sh 'mvn clean package -DskipTests' 
                }
           }
        }
        stage('Start SQL') { 
            steps {
              sh 'docker start nexum-db'
           }
       }
        stage('Transfer Jar to Deploy Folder') { 
            environment {            
                APP_JAVA = 'backend-0.0.1-SNAPSHOT.jar'
                APP_PATH = "/home/ubuntu/deploy/"
            }        
            steps {
              dir('backend') {   
                 sh "rm $APP_PATH$APP_JAVA"  

                 sh "cp target/$APP_JAVA $APP_PATH"

                 sh "chmod +x $APP_PATH$APP_JAVA"

                 sh "docker rm nexum-back"
              }            
           }
       }
        stage('Deploy') {                
            steps {
                sh "docker run -p 8000:8000 --network nexum-network --name  nexum-back -v /home/ubuntu/deploy/backend-0.0.1-SNAPSHOT.jar:/app/backend-0.0.1-SNAPSHOT.jar nexum-image-back"

                sh 'docker start nexum-back'                      
           }
       }
   }
}
