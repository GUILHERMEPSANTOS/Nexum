<?xml version="1.0" encoding="utf-8"?>
<resources>
    
    <style name="Edit_Text_label">
        <item name="android:layout_height">35dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/edit_text</item>
    </style>

    <style name="Button_Dark">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/button_dark</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Button_Light">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/button_light</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Text_View_Title_Page">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:textSize">32dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#7509BD</item>
    </style>

    <style name="Radio_Grup_Cotainer">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
    </style>

    <style name="Check_Box">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
    </style>

    <style name="Radio_Button">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:textSize">20dp</item>
    </style>
    
    <style name="Text_View_Input_Denomination">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
    </style>

    <style name="Text_View_Sub_Title_Page">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">18dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Text_View_Greetings_Home_Page">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">28dp</item>
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Text_View_Functionalities">
        <item name="android:layout_height">160dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:layout_width">380dp</item>
        <item name="android:layout_marginTop">25dp</item>
        <item name="android:gravity">center</item>
        <item name="android:drawableRight">@drawable/iconcard</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/text_view_function</item>
    </style>

    <style name="Text_View_Informacoes">
        <item name="android:layout_height">150dp</item>
        <item name="android:layout_width">260dp</item>
        <item name="android:opacity">translucent</item>
        <item name="android:textSize">20dp</item>
        <item name="android:background">@drawable/text_view_informacoes</item>
    </style>

    <style name="Relative_Info">
        <item name="android:layout_height">35dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/edit_text</item>
    </style>


    <style name="Scroll_Bar">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:background">@drawable/scroll_bar</item>
    </style>
    
</resources>