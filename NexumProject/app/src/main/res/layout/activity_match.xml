<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="fill"
    android:background="#262528"
    tools:context=".Match">

    <ImageView
        style="@style/MyImageViewStyleButtonVoltar"/>

    <ImageView
        android:id="@+id/LogoFooter"
        style="@style/MyImageViewStyleLogoFooter"
        />

    <TextView
        style="@style/Text_View_Greetings_Home_Page"
        android:id="@+id/tvMensagemParabenizando"
        android:layout_below="@+id/LogoFooter"
        android:text="Parabéns, Ana Carolina, você tem um Match"
        />

    <ScrollView
        style="@style/Scroll_Bar"
        android:layout_below="@+id/tvMensagemParabenizando">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                style="@style/Text_View_Functionalities"
                android:id="@+id/tvContatoWhatsApp"
                android:padding="10dp"
                android:text="Clique aqui para conversar por WhatsApp"
                />

            <TextView
                style="@style/Text_View_Functionalities"
                android:id="@+id/tvContatoEmail"
                android:layout_below="@+id/tvContatoWhatsApp"
                android:padding="10dp"
                android:text="Clique aqui para conversar por E-mail" />

            <RelativeLayout
                android:layout_marginBottom="20dp"
                android:layout_marginTop="25dp"
                android:layout_below="@+id/tvContatoEmail"
                android:padding="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#353338">

                <TextView
                    android:id="@+id/tvCantatoCampoTelefone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="24dp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:text="Telefone"/>

                <TextView
                    android:id="@+id/tvCantatoCampoNumeroDeTelefone"
                    android:layout_below="@+id/tvCantatoCampoTelefone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:textColor="@color/white"
                    android:text="55 11 9999 9999"/>

                <TextView
                    android:layout_below="@+id/tvCantatoCampoNumeroDeTelefone"
                    android:layout_marginTop="10dp"
                    android:id="@+id/tvCantatoCampoEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="24dp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:text="E-mail"/>

                <TextView
                    android:id="@+id/tvCantatoCampoEmailPorExtenso"
                    android:layout_below="@+id/tvCantatoCampoEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:textColor="@color/white"
                    android:text="careyoulife@unioncompany.com.br"/>


            </RelativeLayout>

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>